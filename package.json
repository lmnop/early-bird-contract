{
  "name": "lmnop-contracts",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "main": "index.js",
  "scripts": {
    "compile": "truffle compile",
    "deploy-dev": "truffle migrate --network development --reset",
    "deploy-rinkeby": "truffle migrate --network rinkeby --reset",
    "deploy-test": "truffle migrate --network test --reset",
    "deploy": "truffle migrate --network live --reset",
    "geth-dev": "testrpc > geth-dev.log",
    "geth-test": "geth --testnet --rpc --rpcport 8546 console 2>> geth-test.log",
    "geth": "geth --rpc --rpcport 8547 console 2>> geth.log",
    "test": "sh scripts/test.sh",
    "lint-tests": "eslint test",
    "lint-contracts": "solium --dir .",
    "lint": "yarn lint-tests && yarn lint-contracts"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-react": "^7.1.0",
    "truffle-hdwallet-provider": "^0.0.3"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "mocha": true
    },
    "plugins": [
      "mocha"
    ],
    "rules": {
      "mocha/no-exclusive-tests": "error",
      "mocha/no-skipped-tests": "error",
      "mocha/no-identical-title": "error"
    }
  },
  "dependencies": {
    "dotenv": "^4.0.0"
  }
}
